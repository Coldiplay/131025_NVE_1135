<Window x:Class="InterFaceCollege.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:InterFaceCollege.VM"
        xmlns:model="clr-namespace:InterFaceCollege.Model"
        xmlns:local="clr-namespace:InterFaceCollege"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{DynamicResource vm}">
    <Window.Resources>
        <vm:MainWindowVM x:Key="vm"/>


        <DataTemplate DataType="{x:Type model:StudentDTO}">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Id}"/>
                <Label Content="{Binding FullName}"/>
                <Label Content="{Binding GetGender}"/>
                <Label Content="{Binding Phone}"/>
                <Label Content="{Binding GroupTitle}"/>
                <Label Content="{Binding IdGroup}"/>
            </StackPanel>
        </DataTemplate>


    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu HorizontalAlignment="Left">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </Menu.Resources>
            <MenuItem Header="Студенты">
                <MenuItem Header="С Id">
                    <MenuItem>
                        
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Без группы" Command="{Binding SetToStudentsWOutGroup}"/>
                <MenuItem Header="Дубликаты" Command="{Binding SetToRepeatedStudents}"/>
            </MenuItem>
            <MenuItem Header="Группы" Command="{Binding OpenGroupsWindow}"/>
        </Menu>

        <!--<ListView Grid.Row="1" ItemsSource="{Binding SelectedList}"/>-->
        <ListBox Grid.Row="1" ItemsSource="{Binding SelectedList}"/>

    </Grid>
</Window>
