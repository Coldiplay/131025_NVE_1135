<Window x:Class="InterFaceCollege.View.GroupsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterFaceCollege.View"
        xmlns:vm="clr-namespace:InterFaceCollege.VM"
        mc:Ignorable="d"
        Title="GroupsWindow" Height="450" Width="800"
        DataContext="{DynamicResource vm}">
    <Window.Resources>
        <vm:GroupsWindowVM x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="Группы">
                <MenuItem Header="Все" Command="{Binding GetGroups}"/>
                <MenuItem Header="Пустые" Command="{Binding GetEmptyGroups}"/>
            </MenuItem>
        </Menu>

        <ListView Grid.Row="1" ItemsSource="{Binding Groups}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название группы" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Кол-во студентов" DisplayMemberBinding="{Binding StudentsCount}"/>
                    <GridViewColumn Header="Специальность" DisplayMemberBinding="{Binding SpecialtyTitle}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1" Grid.Row="1" MinWidth="200">
            <Button Content="Очистить" Command="{Binding}"/>
            <Label Content="Название группы"/>
            <TextBox Text="{Binding NewGroup.Title}"/>
            <Label Content="Специальность"/>
            <ComboBox ItemsSource="{Binding}"/>
            <Button Content="Сохранить" Command="{Binding}"/>
        </StackPanel>
        
    </Grid>
</Window>
